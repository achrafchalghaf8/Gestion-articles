{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
	</style>

	<div class="example-wrapper">
		<h1>Liste des articles</h1>

		{% for art in articles %}
			<h3>
				<a href="{{ path('article_show', {id: art.id})}}">{{art.libelle}}
					({{art.reference}})</a>
			</h3>
			<p>Prix:
				{{art.prix}}
				D</p>

		{% endfor %}
	</div>
{% endblock %}
